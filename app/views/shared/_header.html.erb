<section class="hero is-link is-small">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <a class="navbar-item">
            <%= link_to root_path , class:"navbar-item" do%>
              <span class="has-text-weight-bold is-size-4 ml-4">FoodCRUD</span>
            <% end %>
          </a>
          <span class="navbar-burger" data-target="navbarMenuHeroA">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
        <div id="navbarMenuHeroA" class="navbar-menu">
          <div class="navbar-end">
            <div class="navbar-item">
              <form class="navbar-item  has-addons" action="/search" >
                <div class="control">
                  <input class="input is-primary" name="q" type="text" placeholder="Search" aria-label="Search">
                </div>
                <div class="control">
                  <button class="button is-primary" type="submit">
                    Search
                  </button>
                </div>
              </form>
              <div class="navbar-item">
                <%= link_to new_entry_path, class: "button is-success" do %>
                  <span>Create new entry</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>
  </div>
  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        <% if content_for(:title) %> <%= yield :title %> <% else %> FoodCRUD <%
        end %>
        </h1>
      </div>
    </div>
  </section>
